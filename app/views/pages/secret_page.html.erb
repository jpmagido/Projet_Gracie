<div class="container">
    <h1>Profile</h1>
    <hr>

  <div class="row">
      <!-- left column -->
      <div class="col-md-3">
        <div class="text-center">
          <img src="//placehold.it/100" class="avatar img-circle" alt="avatar">
          
          
          
        </div>
      </div>
      
      <!-- edit form column -->
      <div class="col-md-9 personal-info">
        
        <h3>Personal info</h3>
        
       

          <div class="form-group">
            <label class="col-lg-8 control-label">First name: <% if current_user.first_name == nil %>
            		<%= link_to "modifier", edit_user_registration_path, class: "btn btn-secondary btn-block" %>
            	<% else %>
            		<%= current_user.first_name %>
            	<% end %>
            		
            	</label>
           
          </div>
          <div class="form-group">
            <label class="col-lg-8 control-label">Last name: <% if current_user.last_name == nil %>
            		<%= link_to "modifier", edit_user_registration_path, class: "btn btn-secondary btn-block" %>
            	<% else %>
            		<%= current_user.last_name %>
            	<% end %>
            		
            	</label>
            
          </div>
          <div class="form-group">
            <label class="col-lg-8 control-label">Age: <% if current_user.age == nil %>
            		<%= link_to "modifier", edit_user_registration_path, class: "btn btn-secondary btn-block" %>
            	<% else %>
            		<%= current_user.age %>
            	<% end %>
            </label>
            
          </div>
          <div class="form-group">
            <label class="col-lg-8 control-label"><strong>Weight:</strong> <% if current_user.weight == nil %>
            		<%= link_to "modifier", edit_user_registration_path, class: "btn btn-secondary btn-block" %>
            	<% else %>
            		<%= current_user.weight %>
            	<% end %>
            		
            	</label>
            
          </div>
          <div class="form-group">
            <label class="col-lg-8 control-label"><strong>Job:</strong> <% if current_user.profession == nil %>
            		<%= link_to "modifier", edit_user_registration_path, class: "btn btn-secondary btn-block" %>
            	<% else %>
            		<%= current_user.profession %>
            	<% end %></label>
          </div>
          <div class="form-group">
            <label class="col-lg-8 control-label"><strong>Email:</strong> <% if current_user.email == nil %>
            		<%= link_to "modifier", edit_user_registration_path, class: "btn btn-secondary btn-block" %>
            	<% else %>
            		<%= current_user.email %>
            	<% end %></label>
            
          </div>
          <div class="form-group">
            <label class="col-lg-8 control-label">Belt: <% if current_user.belt == nil %>
            		<%= link_to "modifier", edit_user_registration_path, class: "btn btn-secondary btn-block" %>
            	<% else %>
            		<%= current_user.belt %>
            	<% end %></label>
            
          </div>
          <div class="form-group">
                      <label class="col-md-8 control-label">Phone: <% if current_user.phone == nil %>
            		<%= link_to "modifier", edit_user_registration_path, class: "btn btn-secondary btn-block" %>
            	<% else %>
            		<%= current_user.phone %>
            	<% end %></label>
            
          </div>
          

          <div class="form-group">
            <label class="col-md-3 control-label"></label>
            <div class="col-md-8">
            	<%= link_to "Sign out", destroy_user_session_path, method: :delete, class: "btn btn-danger btn-block" %>
              
              <span></span>
              <%= link_to "Edit email / password", edit_user_registration_path, class: "btn btn-default btn-block" %>
              
            </div>
          </div>
       
      </div>
  </div>
</div>
<hr>