<div class="form-gap"></div>
<div class="container">
  <div class="row">
    <aside class="col-sm-3">
    </aside>
    <div class="col-md-5 col-md-offset-5">
            <div class="card">
              <div class="card-body">
                <div class="text-center">
                  <h3><i class="fa fa-lock fa-4x"></i></h3>
                  <h2 class="text-center">Changez votre mot de passe</h2>
                  <div class="panel-body">
    
                    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
                      <%= render "devise/shared/error_messages", resource: resource %>
                      <%= f.hidden_field :reset_password_token %>
                      <div class="form-group">
                        <div class="input-group  justify-content-center">
                          <%= f.label :password, "New password" %><br />
                            <% if @minimum_password_length %>
                              <em>(<%= @minimum_password_length %> characters minimum)</em><br />
                            <% end %>
                            <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: "******" %>
                          <%= f.label :password_confirmation, "Confirm new password" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "******" %>
                        </div>
                      </div>
                      <div class="form-group">
                        <%= f.submit "Changer mon mot de passe", class:"btn btn-lg btn-primary btn-block" %>
                      </div>
                      
                      
                    <% end %>
    
                  </div>
                </div>
              </div>
            </div>
          </div>
          <aside class="col-sm-1">
  </aside>
  </div>
</div>


