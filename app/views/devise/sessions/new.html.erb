<%= render "layouts/navbar" %>

<body id="page-static">
<div class="row">
  <aside class="col-sm-4">
  </aside>
<aside class="col-sm-4">
<div class="card">
<article class="card-body">
  <%= link_to "Sign up", new_registration_path(resource_name), class:"float-right btn btn-outline-primary" %>
  <h4 class="card-title mb-4 mt-1">Sign in</h4>
  <p>
    <%= render "devise/shared/links" %>
  </p>
  <hr>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email or login", class: "form-control" %>
    </div> <!-- form-group// -->
    <div class="form-group">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "******", class: "form-control" %>
    </div> <!-- form-group// -->   
    <div class="form-group">
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me, type: "checkbox" %>
          <%= f.label :remember_me %>
        </div>
      <% end %> 
    </div>                                   
    <div class="row">
        
        <div class="col-md-6">
            <div class="form-group">
              <%= f.submit "Login", class: "btn btn-primary btn-block" %>
                
            </div> <!-- form-group// -->
        </div>
        <div class="col-md-6 text-right">
            <%= link_to "Forgot your password?", new_password_path(resource_name) %>
        </div>    
                                             
    </div> <!-- .row// -->                                                                  
<% end %>
</article>
</div>
</aside>
 <aside class="col-sm-4">
  </aside>
</div>

<%= render "layouts/footer" %>
</body>